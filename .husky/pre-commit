


# Cores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Verificar se há arquivos staged
if git diff --cached --quiet; then
  echo "${YELLOW}⚠️  No files staged for commit${NC}"
  exit 0
fi

echo "${GREEN}🔍 Running type check...${NC}"
npx tsc --noEmit || {
  echo "${RED}❌ Type check failed${NC}"
  exit 1
}

echo "${GREEN}🎨 Running lint-staged...${NC}"
npx lint-staged || {
  echo "${RED}❌ Lint-staged failed${NC}"
  exit 1
}

echo "${GREEN}✅ All pre-commit checks passed!${NC}"
